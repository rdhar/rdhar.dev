---
// Foundations
import Text from "@/components/foundations/elements/Text.astro";
import Wrapper from "@/components/foundations/containers/Wrapper.astro";
// Data
const data = [
  {
    period: "2014-2015",
    title: "Diploma for IT & Telecommunications Professionals",
    description: `Planned and deployed online products to meet on-demand business requirements. Modules: Object-oriented Java, SQL databases and web development (HTML, S/CSS, JavaScript, React, NodeJS) in conjunction with my apprenticeship to simulate real-world apps.`,
    location: "Institution of Engineering and Technology (IET), UK",
  },
  {
    period: "2010-2014",
    title: "BEng 1st (Hons) in Electronic & Software Engineering",
    description: `Applied practical human-computer interaction model by building and programming an autonomous robot to carry out complex functions within an interdisciplinary team. Modules: Big Data Algorithmics, Computer Architecture, Embedded Processors and Distributed Systems.`,
    location: "University of Glasgow, UK",
  },
];
---

<section>
  <Wrapper variant="standard">
    <div
      class="grid grid-cols-1 gap-4 md:grid-cols-3 border-b py-8 border-base-200 dark:border-base-800">
      <div class="lg:sticky lg:top-24 lg:z-40 self-start">
        <Text tag="h2" variant="textSM" class="text-base-900 dark:text-white"> Education </Text>
      </div>
      <div class="flex flex-col gap-12 lg:col-span-2">
        {
          data.map((data, index) => (
            <article class="group relative grid grid-cols-1 gap-4 lg:grid-cols-3 lg:items-start ">
              <div class="lg:col-span-2">
                <Text
                  tag="h3"
                  variant="textSM"
                  class=" font-medium tracking-tight text-base-900 dark:text-white    ">
                  {data.title}
                </Text>
                <Text tag="p" variant="textXS" class=" mt-1 text-base-600 dark:text-base-500      ">
                  {data.description}
                </Text>
              </div>
              <Text tag="p" variant="textXS" class="text-base-600 dark:text-base-400  lg:ml-auto">
                <time datetime={data.period}> {data.period}</time>
              </Text>
            </article>
          ))
        }
      </div>
    </div>
  </Wrapper>
</section>

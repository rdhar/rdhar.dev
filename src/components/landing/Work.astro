---
import Text from "@/components/foundations/elements/Text.astro";
import Wrapper from "@/components/foundations/containers/Wrapper.astro";
const data = [
  {
    period: "Dec 2023 - Present",
    title: "Senior DevOps Engineer II of Cloud Computing Platforms",
    description: `• Standalone subsidiary of Tucows, simplifying telecom software for operators.
      • Hosted knowledge-shares across multidisciplinary teams to advocate against information silos and promote DevSecOps best practices. Led hands-on GitHub Actions workshops, encouraging automation of day-to-day tasks with loosely-coupled CI/CD pipelines.
      • Wrote infrastructure as code for consistent end-to-end policies with reusable Terraform modules: allowing the Enterprise license to be ditched altogether.`,
    location: "Zurich, Switzerland",
    link: "#_",
  },
  {
    period: "Nov 2019 - Nov 2021",
    title: "Lead Site Reliability DevOps Engineer",
    description: `• Platform as a service provider for wealth and asset management firms.
      • Having inherited a disarray of monitoring alerts, rapidly established processes to standardise and streamline alerting setup with PowerShell agent to interface with PagerDuty, Splunk, and Datadog APIs. Introduced Terragrunt templates for enterprise-scale orchestration, reducing client-onboarding lead time by 4 days.`,
    location: "Basel, Switzerland",
    link: "#_",
  },
];
---

<section>
  <Wrapper variant="standard">
    <div
      class="grid grid-cols-1 gap-4 md:grid-cols-3 border-b py-8 border-base-200 dark:border-base-800">
      <div class="lg:sticky lg:top-24 lg:z-40 self-start">
        <Text tag="h2" variant="textSM" class="text-base-900 dark:text-white"> Work </Text>
      </div>
      <div class="flex flex-col gap-12 lg:col-span-2">
        {
          data.map((work, index) => (
            <article class="group relative grid grid-cols-1 gap-4 lg:grid-cols-3 lg:items-start ">
              <div class="lg:col-span-2">
                <Text
                  tag="h3"
                  variant="textSM"
                  class=" font-medium tracking-tight text-base-900 dark:text-white    ">
                  <div class="absolute -inset-x-1 -inset-y-4 z-0 scale-95 bg-base-50 dark:bg-base-800/20    opacity-0 transition group-hover:scale-100 group-hover:opacity-100 -inset-x-4 rounded-2xl duration-300" />
                  <a href={work.link}>
                    <>
                      <span class="absolute -inset-x-4 -inset-y-6 z-20 sm:-inset-x-6 sm:rounded-2xl" />
                      <span class="relative z-10"> {work.title}</span>
                    </>
                  </a>
                </Text>
                <Text
                  tag="p"
                  variant="textXS"
                  class="relative z-10 mt-1 text-base-600 dark:text-base-600 dark:text-base-400      ">
                  {work.description}
                </Text>
              </div>
              <Text
                tag="p"
                variant="textXS"
                class="relative z-10   flex items-center text-sm text-base-600 dark:text-base-400  lg:ml-auto">
                <time datetime={work.period}> {work.period}</time>
              </Text>
            </article>
          ))
        }
      </div>
    </div>
  </Wrapper>
</section>
